@model Patently.Models.Item
@{
    ViewData["Title"] = "Edytuj Przedmiot";
    Layout = "_Layout";
}

<h1>Edytuj Przedmiot</h1>
<hr/>

<div class="row">
    <div class="col-md-4"> @* TODO *@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label">Nazwa: </label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DateWhenAdded" class="custom-control-label">Data dodania: </label>
                <input asp-for="DateWhenAdded" class="form-control"/>
                <span asp-validation-for="DateWhenAdded" class="text-danger"></span>
            </div>
            
            <div class="form-group"><!-- TODO: add list of existing creators with selection -->
                <label asp-for="Creator.ID" class="custom-control-label">ID Twórcy: </label> 
                <input asp-for="Creator.ID" class="form-control" type="number"/>
                <span asp-validation-for="Creator" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Powrót do listy</a>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

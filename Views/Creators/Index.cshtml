@model IEnumerable<Patently.Models.Creator>
@{
    ViewData["Title"] = "Twórcy";
    Layout = "_Layout";
}

<h1>Twórcy</h1> 
<hr/>
<p>
    <a class="btn btn-info" asp-action="Create">Nowy Twórca</a>
</p>

<table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor( model => model.Name )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.SecName )
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor( modelItem => item.Name )
                </td>
                <td>
                    @Html.DisplayFor( modelItem => item.SecName )
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edytuj</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Szczegóły</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
